{
  "name": "micro-fe-bff-template",
  "version": "1.0.0",
  "description": "A TypeScript BFF (Backend-For-Frontend) template for micro frontends with Express, hot reload, and data transformation examples",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "tsx --watch --env-file .env index.ts",
    "start": "node --env-file .env dist/index.js",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "imports": {
    "#*": "./*"
  },
  "dependencies": {
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tsconfig/node24": "^24.0.3",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.8",
    "eslint": "^9.39.2",
    "eslint-plugin-perfectionist": "^5.3.1",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
